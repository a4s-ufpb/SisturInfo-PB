<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ActivitysSecond.ActivityInfAt"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5sp"
        android:id="@+id/linearprimeiroAt"
        >


        <android.support.v7.widget.CardView
            android:id="@+id/cardAt"
            android:layout_width="200dp"
            android:layout_height="87dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80dp"
            android:background="#ffffff"
            android:shape="ring"
            app:cardCornerRadius="27dp"
            android:layout_marginTop="16dp"
            >


            <ImageView
                android:id="@+id/fotoatrativo"
                android:layout_width="200dp"
                android:layout_height="87dp"
                >


            </ImageView>


        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearprimeiroAt"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/nomeAtrativo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="125dp"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold|italic" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/seta_direita"
                android:layout_marginLeft="320dp"

                android:contentDescription="TODO" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>